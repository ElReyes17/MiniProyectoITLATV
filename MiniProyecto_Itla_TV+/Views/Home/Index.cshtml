@using Application.ViewModel.Productoras
@using Application.ViewModel.Series
@model List<Application.ViewModel.Series.SeriesViewModel>

<div class="container-fluid"> 
    
    <div class="row mb-3">
  
        <div class="col-md-6">

        <div class="card">
            <div class="card-header bg-dark text-light">
                <h4>Filtrar por Nombre</h4>
            </div>
            <div class="card-body">
                <form method="post" asp-controller="Home" asp-action="Index">
                    <div class="form-group">
                        <label for="nombre-serie">Nombre de la Serie</label>
                        <input type="text" class="form-control" id="nombre-serie" name="NombreSerie" placeholder="Escriba el nombre de la serie">
                    </div>
                    <button type="submit" class="btn btn-success mb-3">Filtrar por Nombre</button>
                </form>
            </div>
        </div>
    </div>
    
    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-dark text-light">
                <h4>Filtrar por Productora</h4>
            </div>
            <div class="card-body">
                <form method="post" asp-controller="Home" asp-action="Index">
                    <div class="form-group">
                        <label for="productora-selector">Seleccionar Productora</label>
                        <select class="form-control" id="productora-selector" name="ProductoraId">
                            <option value="null">Todas</option>
                            @foreach(ProductorasViewModel productora in ViewBag.Productoras)
                            {
                                <option value="@productora.Id">@productora.Nombre</option>
                            }
                        </select>
                    </div>
                    <button type="submit" class="btn btn-success mb-3">Filtrar</button>
                </form>
            </div>
        </div>
    </div>
</div>
 
    <h4 class="mb-3"> Series Disponibles </h4>

    <div class="row mb-3">
        @foreach(var item in Model){
        <div class="col-4 mb-3">
          <div class="card shadow-sm">
    
              <img src="@item.Imagen" class="img-product-size bd-placeholder-img card-img-top " />
      
            <div class="card-body">
                <h4>@item.Nombre </h4>
                
              <p class="card-text">Genero Primario: @item.SeriesGeneros[0].ToString() </p>
                
              @if(@item.SeriesGeneros.Count >= 2){
              <p class="card-text">Genero Secundario: @item.SeriesGeneros[1].ToString() </p>
              } 
               <p class="card-text">Productora: @item.NombreProductora</p>
              <div>
                  <div class="btn-group">
                 <a class="btn btn-success " asp-controller="Home" asp-action="Video" asp-route-id="@item.Id">Detalles de la Serie</a>
                </div>
              </div>
            </div>
          </div>
        </div>
}
          </div>
        </div>

       
        
      
      </div>


</div>

<style> 

.card img{

    width: 100%;
    height: 300px;
    object-fit: cover;
}


</style> 