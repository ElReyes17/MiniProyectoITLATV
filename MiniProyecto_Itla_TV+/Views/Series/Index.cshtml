@model List<Application.ViewModel.Series.SeriesViewModel>

<div class ="container-fluid"> 

      <div class="row mb-3">

   <h2 class="text-center nav-link text-dark fw-bold"> Mantenimiento De Series </h2>
  <div class="col-3 offset-9">
                            <a class="btn btn-success" asp-controller="Series" asp-action="Create">Agregar Nueva Serie</a>
               </div>
     </div>

     <div class="row">
       
        @foreach(var item in Model){
        <div class="col-4 mb-3">
          <div class="card shadow-sm">
    
              <img src="@item.Imagen" class="img-product-size bd-placeholder-img card-img-top " />
      
            <div class="card-body">
                <h4>@item.Nombre </h4>
              <p class="card-text">Genero Primario: @item.SeriesGeneros[0].ToString() </p>
             
              @if(@item.SeriesGeneros.Count >= 2){
              <p class="card-text">Genero Secundario: @item.SeriesGeneros[1].ToString() </p>
              }
               <p class="card-text">Productora: @item.NombreProductora</p>
              
              <div>
                  <div class="btn-group">
                  
                      <a class="btn btn-primary btn-edit" asp-controller="Series" asp-action="Edit" asp-route-id="@item.Id">
        <i class="fa-solid fa-pen-to-square"></i>
    </a>
                    <a asp-controller="Series" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">
            <i class="fa-solid fa-eraser"></i>
      </a>
                 
                </div>
              </div>
            </div>
          </div>
        </div>
      
    }
          </div>
          
        </div>

       
        
      <script src="https://kit.fontawesome.com/47ea8ef61d.js" crossorigin="anonymous"></script>
      </div>


</div>

<style> 

.card img{

    width: 100%;
    height: 300px;
    object-fit: cover;
}


</style> 